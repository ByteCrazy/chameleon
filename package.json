{
  "name": "chameleon",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "clear": "rm -rf ./node_modules",
    "lint": "lerna run lint",
    "build": "lerna run build",
    "version": "lerna version",
    "toPublish": "lerna publish from-package",
    "run-tests": "lerna run test"
  },
  "lint-staged": {
    "packages/*/src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix --quiet"
    ],
    "packages/*/src/**/*": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@instructure/cz-lerna-changelog": "8.25.0",
    "@lerna-lite/cli": "^1.17.0",
    "@lerna-lite/list": "^1.17.0",
    "@lerna-lite/run": "^1.17.0",
    "@lerna-lite/watch": "^1.17.0",
    "@storybook/preset-scss": "^1.0.3",
    "commitizen": "^4.2.4",
    "css-loader": "5.2.7",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "sass": "^1.53.0",
    "sass-loader": "10.1.1",
    "style-loader": "2.0.0"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "git-cz": "^4.9.0",
    "husky": "^8.0.1"
  },
  "config": {}
}