{
  "name": "@chameleon/engine",
  "version": "0.0.1",
  "scripts": {
    "start": "build-script",
    "build": "build-script --build",
    "build:app": "yarn copyAssets & export NODE_OPTIONS=--max-old-space-size=32768 && cross-env BUILD_TYPE=APP build-script --build",
    "build:app:analyze": "cross-env BUILD_TYPE=APP ANALYZE=1 build-script --build",
    "copyAssets": "sh ./scripts/copyAssets.sh",
    "prestart": "yarn copyAssets",
    "lint": "eslint --ext .tsx,.ts src/",
    "prettier": "prettier --write ./src",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@ant-design/icons": "^4.8.0",
    "@chameleon/demo-page": "*",
    "@chameleon/layout": "*",
    "@chameleon/model": "*",
    "@chameleon/render": "*",
    "@dnd-kit/core": "^6.0.7",
    "@dnd-kit/modifiers": "^6.0.1",
    "@dnd-kit/sortable": "^7.0.2",
    "ahooks": "^3.7.4",
    "antd": "^5.0.0",
    "consola": "^2.15.3",
    "i18next": "^22.1.5",
    "lodash-es": "^4.17.21",
    "monaco-editor": "^0.34.1",
    "re-resizable": "^6.9.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@chameleon/build-script": "*",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-vite": "^0.4.2",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@types/consola": "^2.2.5",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "babel-loader": "^8.3.0",
    "cross-env": "^7.0.3",
    "eslint-plugin-react-hooks": "^4.6.0",
    "react-router-dom": "^6.7.0",
    "rollup-plugin-visualizer": "^5.8.3",
    "sass": "^1.54.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@chameleon/cz-lerna-changelog"
    }
  }
}